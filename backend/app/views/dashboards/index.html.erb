        <!-- render the matches as if the hunter is here -->
        <!-- TODO modify this in anyway that is seen fit -->
        
      <!--    <div class="hunter-offers">-->
             <div class="row">
            
            <% @matches.each do |listing| %>
            
       <!--     <div class="listing-detail">-->
