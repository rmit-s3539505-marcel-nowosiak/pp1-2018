<p id="notice"><%= notice %></p>

<div class="panel">
  <% if @user.first_name %>
    <h1>Welcome to your dashboard, <%= @user.first_name%></h1>
      <% if @matches %>
        <% @matches.each do |match, score| %>
        <div class="listing-details">
          <li><%= match.title %></li>
          <li><%= score %>% match</li>
          <ul>
            <li><%= match.body %></li>
            <li><%= match.min_salary %> dollars an hour</li>
          </ul>
        </div>
        <% end %>
      <% end %>
  <% else %>
    <h1>Create your profile</h1>
    <!-- Render the profile creation panel etc -->
    <%= render :partial => 'hunter_profiles/form' %>
  <% end %>
</div>


<%= link_to "Sign Out", destroy_user_session_path, :method => :delete %>
