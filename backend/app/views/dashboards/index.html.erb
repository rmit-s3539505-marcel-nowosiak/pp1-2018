<p id="notice"><%= notice %></p>

<div class="panel">
  <% if @user.first_name %>
    <h1>Welcome to your dashboard, <%= @user.first_name%></h1>
  <% else %>
    <h1>Create your profile</h1>
    <!-- Render the profile creation panel etc -->
    <%= render "create_profile" %>
  <% end %>
</div>

<div class="matches">
<% if @matches.nil? %>
  <h3>No matches currently</h3>
<% else %>
  <% @matches.each do |m| %>
    <h3><%= m.title %></h3>
    <p><%= m.body %></p>
    <p><%= m.min_salary %></p>
  <% end %>
<% end %>
</div>

<%= link_to "Sign Out", destroy_user_session_path, :method => :delete %>
