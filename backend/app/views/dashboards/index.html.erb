
<p id="notice"><%= notice %></p>

<div class="jumbotron">
<div class="panel">
  <% if @user.first_name %>
    <h1>Welcome to your dashboard, <%= @user.first_name%></h1>
    <% if @matches %>
    <tbody>
      <% @matches.each do |listings| %>
        <tr>
          <td><%= listings[0].hours %></td><br>
          <td><%= listings[0].title %></td><br>
          <td><%= listings[0].location %></td><br>
          <%= @matches[listings[0]].each do |hunter| %>
            <%= hunter.user.email %><br>
            <%= hunter.user.first_name + ' ' + hunter.user.last_name %><br>
          <% end %>
        </tr><br>
      <% end %>
    </tbody>
    <% end %>
  <% else %>
    <h1>Create your profile</h1>
    <!-- Render the profile creation panel etc -->
    <%=
    #  render 'hunter_profiles/form'
    %>
  <% end %>
</div>


<div class="text-center">
<%= link_to "Sign Out", destroy_user_session_path, :method => :delete, class: 'btn btn-primary btn-lg' %>
</div>
</div>
