<p id="notice"><%= notice %></p>

<div class="panel">
  <% if @user.first_name %>
    <h1>Welcome to your dashboard, <%= @user.first_name%></h1>

    <div class="listings">
    <%= @listings.each do |listing,hunter| %>
      <!-- score for the hunter maps to hunter[1] -->
      <div class="detailed-listing">
        <p><%= listing.title %></p>
        <p><%= hunter[0].user.first_name + ' ' + hunter[0].user.last_name %></p>
        <p><%= hunter[1] %>% match</p>
        <!-- TODO make button toggle visibility of the detailed hunter info -->
        <button>Show More</button>
        <div class="hunter-details">
          <!-- Render this on button press -->
        </div>
      </div>
    <% end %>
  </div>

  <% else %>
    <h1>Create your profile</h1>
    <!-- Render the profile creation panel etc -->
    <%= render :partial => 'hunter_profiles/form' %>
  <% end %>
</div>


<%= link_to "Sign Out", destroy_user_session_path, :method => :delete %>
